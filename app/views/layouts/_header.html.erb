      <% end %>
      <% if current_user %>
      <%= deep_active_link_to new_post_path do %>
        <div class="fa fa-plus"></div>
        글쓰기
      <% end %>
        <%= deep_active_link_to posts_path do %>
          <i class="fa-solid fa-passport"></i>
