          <i class= "fa fa-user-plus"></i>
          친구초대
        <% end %>
        <%= link_to privacy_path, class: "nav-link #{'active font-weight-bold' if current_page?(privacy_path)}" do %>
          <div class="fa-solid fa-hand"></div>
          Privacy
        <% end %>
      <% end %>
    </div>
    <div class="navbar-nav ms-auto">
      <% if current_user %>
        <li class="nav-item dropdown" id = "user_dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
