<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render 'posts/post' , post: post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
    <b><%= link_to "수정", edit_post_path(post) ,class: "btn btn-primary"  %></b> |
    <b><%= button_to "삭제", post, method: :delete,  class: "btn btn-primary", 
          data: { controller: "confirm", action: "click->confirm#confirm", confirm_target: "button"}%></b>
    <hr>
  <% end %>
</div>

